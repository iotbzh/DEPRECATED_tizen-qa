doctype 5
html
	head
		title QA Database Export
		include normalize.css
		include documentation.css
	body
		h1 Suite #{suite.name}

		h2 Summary
		div
			ul
				each tset in suite.sets
					li
						a(href="##{tset.name}") #{tset.component}

		hr

		div 
			each tset in suite.sets
				h2(id="#{tset.name}") Test set #{tset.component} (#{tset.name})
				each tcase in tset.cases
					h3 Test case #{tcase.id}
					ul
						li Author: #{tcase.author}
						li Creation date: #{tcase.ctime}
						li Modification date: #{tcase.mtime}
						li Objective: #{tcase.objective}
						li Description: #{tcase.description}
						li Notes: #{tcase.notes}
						li Bugs: #{tcase.bugs}
						li Priority: #{tcase.priority}
						li Status: #{tcase.status}
						li Type: #{tcase.type}
						li Exec Type: #{tcase.exec_type}
						- if (tcase.exec_type == "auto") {
							li Exec Pre-run: #{tcase.exec_pre}
							li Exec: #{tcase.exec}
							li Exec Expected retcode: #{tcase.exec_expected_retcode}
							li Exec Kill Timeout: #{tcase.exec_kill_timeout}
							li Exec Post-run: #{tcase.exec_post}
						- } else {
							li Pre Condition: #{tcase.pre_condition}
							li Post Condition: #{tcase.post_condition}
							li Steps:
								ol
									each step in tcase.steps
										li #{step.description} &nbsp;=&gt;&nbsp; #{step.expected}
						- }
